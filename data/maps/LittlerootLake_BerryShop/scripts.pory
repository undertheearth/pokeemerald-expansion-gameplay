script LittlerootBerry_1 {
    lock
    faceplayer
    message(format("Uh, hi Trainer! Welcome to... Berry Bliss? Explore our, um\p"
    "...berrylicious options? Your Pok√©mon might, you know, like them."))
    waitmessage
    pokemart(Berries_1)
    msgbox("Hope you enjoy... I guess?")
    release
    end
}

